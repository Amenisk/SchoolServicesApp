<Window x:Class="SchoolServicesApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SchoolServicesApp"
        mc:Ignorable="d"
        Title="Леарн" Height="450" Width="800" Icon="\Images\school_logo.ico" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="7*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Background="#E7FABF">
            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                <Image Source="\Images\school_logo.ico" Width="40" ></Image>
                <TextBlock VerticalAlignment="Center" Margin="5" FontSize="32">Школа языков Леарн</TextBlock>
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button x:Name="btnExit" Margin="5" Padding="5 0 5 0" Click="Exit">Выйти</Button>
                <Button x:Name="btnBack"  Margin="5" Padding="5 0 5 0" Click="Back">Назад</Button>
            </StackPanel>
        </Grid>
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Window>
